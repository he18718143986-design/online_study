{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["vite/client", "react", "react-dom", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
