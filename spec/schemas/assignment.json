{
  "$id": "https://example.com/schemas/assignment.json",
  "title": "Assignment",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "course_id": { "type": "string" },
    "courseId": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": ["string", "null"] },
    "dueAt": { "type": ["string", "null"], "format": "date-time" },
    "totalPoints": { "type": "integer", "minimum": 0 },
    "status": { "type": "string", "enum": ["draft", "published", "closed", "pending", "review", "completed", "urgent", "normal"] },
    "submissionsCount": { "type": "integer", "minimum": 0 },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "title", "status"]
}
