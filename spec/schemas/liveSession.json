{
  "$id": "https://example.com/schemas/liveSession.json",
  "title": "LiveSession",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "course_id": { "type": "string" },
    "start_time": { "type": "string", "format": "date-time" },
    "end_time": { "type": ["string", "null"], "format": "date-time" },
    "status": { "type": "string", "enum": ["live", "ended", "scheduled"] },
    "recording_id": { "type": ["string", "null"] }
  },
  "required": ["id", "course_id", "start_time", "status"]
}
